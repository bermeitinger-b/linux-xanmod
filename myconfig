scripts/config --set-str DEFAULT_HOSTNAME "archlinux"
scripts/config --enable BTRFS_FS

# Disable AMD-PMF until they fix it
scripts/config --disable AMD_PMF

# Compress modules (_compress_modules=y)
scripts/config --enable MODULE_COMPRESS_ZSTD

## Custom options
# Disable framebuffer
scripts/config --disable FB
scripts/config --disable FB_MAC

# Disable INTEL
scripts/config --disable CPU_SUP_CENTAUR
scripts/config --disable CPU_SUP_HYGON
scripts/config --disable CPU_SUP_INTEL
scripts/config --disable DRM_I915
scripts/config --disable INTEL_IDLE
scripts/config --disable INTEL_MEI
scripts/config --disable INTEL_TXT
scripts/config --disable KVM_INTEL
scripts/config --disable X86_INTEL_MCE
scripts/config --disable X86_INTEL_PSTATE

# Disable NVIDIA
scripts/config --disable DRM_NOUVEAU
scripts/config --disable DRM_NOUVEAU_BACKLIGHT
scripts/config --disable FB_NVIDIA
scripts/config --disable FB_NVIDIA_BACKLIGHT

# Disable filesystems
scripts/config --disable BCACHEFS_FS
scripts/config --disable BEFS_FS
scripts/config --disable EROFS_FS
scripts/config --disable GFS2_FS
scripts/config --disable JFFS2_FS
scripts/config --disable JFS_FS
scripts/config --disable MINIX_FS
scripts/config --disable NFS_FS
scripts/config --disable NILFS2_FS
scripts/config --disable NTFS3_FS
scripts/config --disable NTFS_FS
scripts/config --disable OCFS2_FS
scripts/config --disable OMFS_FS
scripts/config --disable QFMT_V1
scripts/config --disable REISERFS_FS
scripts/config --disable SCSI
scripts/config --disable SCSI_LOWLEVEL
scripts/config --disable SCSI_PROC_FS
scripts/config --disable UBIFS_FS
scripts/config --disable XFS_FS
scripts/config --disable ZONEFS_FS

# Disable various drivers
scripts/config --disable ACCESSIBILITY
scripts/config --disable AGP
scripts/config --disable ATA_OVER_ETH
scripts/config --disable BLK_DEV_FD
scripts/config --disable CDROM_PKTCDVD
scripts/config --disable EISA
scripts/config --disable FB_RIVA
scripts/config --disable FIREWIRE
scripts/config --disable FIREWIRE_NOSY
scripts/config --disable FPGA
scripts/config --disable GNSS
scripts/config --disable GOOGLE_FIRMWARE
scripts/config --disable GPIO
scripts/config --disable HAMRADIO
scripts/config --disable IEEE802154_DRIVERS
scripts/config --disable IIO
scripts/config --disable INPUT_JOYSTICK
scripts/config --disable ISDN
scripts/config --disable MACINTOSH_DRIVERS
